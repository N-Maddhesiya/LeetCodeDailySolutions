class Solution{
public:
    bool isBalanced(TreeNode* root){
        return h(root)!=-1;
    }
    int h(TreeNode* n){
        if(!n) return 0;
        int l=h(n->left);
        if(l==-1) return -1;
        int r=h(n->right);
        if(r==-1) return -1;
        if(abs(l-r)>1) return -1;
        return max(l,r)+1;
    }
};
